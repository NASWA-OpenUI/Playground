{
  "name": "UI Modernization Demo",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "claimant-services",
  "workspaceFolder": "/workspaces/Playground",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-python.python",
        "rebornix.ruby"
      ]
    }
  },

  "forwardPorts": [3000, 3001, 3002, 3003, 3004, 8000, 8001],
  
  "postCreateCommand": "docker compose up -d",
  
  "remoteUser": "vscode"
}

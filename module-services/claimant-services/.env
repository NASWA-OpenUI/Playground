# Environment variables for Claimant Services
PORT=3000
MONGODB_URI=mongodb://localhost:27017/claimant_services

# Set to 'production' in production environment
NODE_ENV=development

# GraphQL configuration
GRAPHQL_INTROSPECTION=true
GRAPHQL_PLAYGROUND=true

# Logging
LOG_LEVEL=info

# CORS configuration
CORS_ORIGIN=*

# Service information
SERVICE_NAME=claimant-services
SERVICE_VERSION=1.0.0

# Camel API Gateway configuration
CAMEL_GRAPHQL_URL=http://localhost:8080/api/claimant/graphql
CAMEL_TIMEOUT=5000
CAMEL_RETRY_COUNT=3

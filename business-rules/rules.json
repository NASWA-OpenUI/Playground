{
  "rules": {
    "benefitCalculation": {
      "name": "Weekly Benefit Amount Calculation",
      "conditions": {
        "all": [
          {
            "fact": "totalWages",
            "operator": "greaterThan",
            "value": 0
          }
        ]
      },
      "event": {
        "type": "calculateBenefit",
        "params": {
          "formula": "totalWages / 52 * 0.5",
          "maxWeeklyBenefit": 450,
          "minWeeklyBenefit": 50
        }
      }
    },
    "taxRate": {
      "name": "UI Tax Rate",
      "value": 0.5,
      "description": "Multiplier for benefit calculation (changeable for demo)"
    }
  }
}